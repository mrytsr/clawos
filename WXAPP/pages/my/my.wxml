<!--pages/my/my.wxml-->
<view class="container">
  <!-- 用户信息卡片 -->
  <view class="user-card">
    <view class="avatar-section">
      <view class="avatar">{{nickname.avatar || '游客'}}</view>
    </view>
    <view class="info-section">
      <view class="nickname" bindtap="editNickname">{{nickname.name || '游客'}}</view>
      <view class="edit-hint">点击修改昵称</view>
    </view>
  </view>

  <!-- 功能列表 -->
  <view class="menu-list">
    <view class="menu-item" bindtap="goToAbout">
      <view class="menu-left">
        <text class="menu-icon">ℹ️</text>
        <text class="menu-text">关于</text>
      </view>
      <view class="menu-right">
        <text class="menu-arrow">›</text>
      </view>
    </view>
  </view>
  
  <!-- 版本信息 -->
  <view class="version">Version 1.0.0</view>
</view>

<!-- 昵称编辑弹窗 -->
<view class="modal" wx:if="{{showNicknameModal}}">
  <view class="modal-mask" bindtap="closeModal"></view>
  <view class="modal-content">
    <view class="modal-title">修改昵称</view>
    <input class="modal-input" placeholder="请输入昵称" value="{{tempNickname}}" bindinput="onNicknameInput"/>
    <view class="modal-buttons">
      <view class="modal-btn cancel" bindtap="closeModal">取消</view>
      <view class="modal-btn confirm" bindtap="saveNickname">保存</view>
    </view>
  </view>
</view>
