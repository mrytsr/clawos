/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}

.heart-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.heart {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f5f5f5;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.heart.liked {
  transform: scale(1.1);
  box-shadow: 0 12rpx 32rpx rgba(7, 193, 96, 0.3);
}

.heart-icon {
  font-size: 100rpx;
}

.like-text {
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #666;
}

.count-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 60rpx;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.count-label {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.count-number {
  font-size: 56rpx;
  font-weight: bold;
  color: #07c160;
}
